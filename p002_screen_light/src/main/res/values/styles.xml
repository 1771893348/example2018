        <item name="android:progressDrawable">@drawable/set_seek</item>
        <item name="android:thumb">@drawable/set_seek_arrow</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">20dp</item>
    </style>

</resources>
