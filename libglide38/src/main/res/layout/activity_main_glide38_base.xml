<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            layout="@layout/gilde38_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.geeklx.libglide38.base.MessagePicturesLayout
            android:id="@+id/mpl_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_content"
            android:layout_margin="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#E1E1E1" />

    </LinearLayout>

    <com.geeklx.libglide38.base.ImageWatcher
        android:id="@+id/iw_image_watcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>