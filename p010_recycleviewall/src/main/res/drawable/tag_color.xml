<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:background="#000000" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" >
            </solid>

            <stroke
                android:width="1dp"
                android:color="#FF8A00" />

            <corners android:radius="3dp" />

            <padding
                android:bottom="3dp"
                android:left="5dp"
                android:right="5dp"
                android:top="3dp" />
        </shape>
    </item>

</layer-list>